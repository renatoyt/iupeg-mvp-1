{
  "expo": {
    "name": "iupeg-expo",
    "slug": "iupeg-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir o uso da câmera para escanear o código de barras dos produtos"
      }
    },
    "android": {
      "permissions": [
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
